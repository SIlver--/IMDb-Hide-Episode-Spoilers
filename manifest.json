{
  "name": "IMDb Hide Episode Spoilers",
  "version": "1.3",
  "manifest_version": 2,
  "icons" : {
      "128" : "icons/icon128.png"
    },
  "description": "Hides episode number count on IMDb. No more spoilers!",
  "default_locale": "en",
  "permissions": [
    "*://www.imdb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.imdb.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "*://www.imdb.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
