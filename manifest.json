{
  "name": "IMDb Hide Episode Spoilers",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Hides episode number count on IMDb. No more spoilers!",
  "default_locale": "en",
  "permissions": [
    "http://www.imdb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.imdb.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://www.imdb.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}